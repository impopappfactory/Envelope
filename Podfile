source 'https://github.com/CocoaPods/Specs.git'

abstract_target 'Envelope_Framework' do

  target 'EnvelopeNetwork-ios' do
    platform :ios, '8.0'
    use_frameworks!
    inhibit_all_warnings!

    pod 'Alamofire'
  end

  target 'EnvelopeNetworkRx-ios' do
    platform :ios, '8.0'
    use_frameworks!
    inhibit_all_warnings!

    pod 'Alamofire'
    pod 'RxSwift'
  end

  target 'AllTests-ios' do
    platform :ios, '8.0'
    use_frameworks!
    inhibit_all_warnings!

    pod 'Alamofire'
    pod 'RxTest'
    pod 'Quick'
    pod 'Nimble'

  end
end
